{
  "name": "number_to_khmer_word",
  "version": "0.0.4",
  "description": "Javascript and Typescript library for converting Arabic numerals to Khmer words",
  "keywords": [
    "number",
    "khmer",
    "currency",
    "word",
    "words"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "postbuild": "npm pack && mv number_to_khmer_word-*.tgz compiled-lib.tgz",
    "update": "npx npm-check-updates -u",
    "test": "ts-node ./test/test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vh13294/number-to-khmer-word.git"
  },
  "bugs": {
    "url": "https://github.com/vh13294/number-to-khmer-word/issues"
  },
  "homepage": "https://github.com/vh13294/number-to-khmer-word#readme",
  "author": "Vong Panha Huot",
  "license": "MIT",
  "devDependencies": {
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "rimraf": "^3.0.2"
  }
}
